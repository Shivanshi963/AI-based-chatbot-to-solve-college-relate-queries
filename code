from IPython.display import display, HTML
import ipywidgets as widgets
import uuid

# College info dictionary
college_info = {
    "fees": "ğŸ“ Fee Structure:\n- B.Tech: â‚¹80,000/year\n- M.Tech: â‚¹1,00,000/year\n- MBA: â‚¹1,20,000/year\n- Ph.D.: â‚¹60,000/year",
    "placements": "ğŸ“ˆ Placement Highlights 2024:\n- 95% placed\n- Highest: â‚¹25 LPA (Google)\n- Avg: â‚¹7.5 LPA",
    "students": "ğŸ‘¨â€ğŸ“ Approx. 3,200 students enrolled as of 2025",
    "events": "ğŸ‰ Upcoming Events:\n- InnovateX 2025 (Tech Fest)\n- Rhythm Night (Cultural Fest)",
    "branches": "ğŸ¢ Branches Offered:\n- CSE, ECE, ME, EE, CE",
    "facilities": "ğŸ« Facilities:\n- Wi-Fi campus, hostels, smart classrooms, library, gym",
    "courses": "ğŸ“˜ Courses:\n- B.Tech, M.Tech, MBA, Ph.D.",
    "admission": "ğŸ“ Admission:\n- JEE (B.Tech), GATE (M.Tech), CAT/MAT (MBA), Entrance + Interview (Ph.D.)",
    "scholarships": "ğŸ Scholarships:\n- Merit-based, Need-based, Girl students, Reserved categories",
    "hostel": "ğŸ  Hostel Life:\n- Furnished rooms, hygienic mess, 24x7 security, recreation",
    "library": "ğŸ“š Library:\n- 50,000+ books, IEEE, Springer, J-Gate access",
    "faculty": "ğŸ‘©â€ğŸ« Faculty:\n- 200+ members, 80% PhDs, 500+ publications"
}

def chatbot_response(message):
    message = message.lower()
    for key in college_info:
        if key in message:
            return college_info[key]
    return "ğŸ¤” Please ask about fees, courses, admissions, hostel, placements, etc."

# Custom styles (with improved contrast)
chat_style = """
<style>
.chat-container {
    background-color: #f9f9f9;
    border-radius: 10px;
    padding: 15px;
    max-height: 400px;
    overflow-y: auto;
    border: 1px solid #ccc;
    font-family: Arial;
}
.user-msg {
    background-color: #d1e7ff;
    padding: 8px 12px;
    border-radius: 10px;
    margin: 5px 0;
    display: inline-block;
    color: #004085;
}
.bot-msg {
    background-color: #d4edda;
    color: #155724;
    padding: 8px 12px;
    border-radius: 10px;
    margin: 5px 0;
    display: inline-block;
}
</style>
"""

# Unique div ID for the chat area
div_id = "chat-" + str(uuid.uuid4())

# Display chat UI container
display(HTML(chat_style + f'<div class="chat-container" id="{div_id}"></div>'))

# Input box widget
input_box = widgets.Text(
    placeholder='Ask about fees, placements, courses, etc...',
    layout=widgets.Layout(width="90%"),
)

# Function to handle message send
def on_enter(_):
    user_input = input_box.value
    bot_reply = chatbot_response(user_input)

    display(HTML(f"""
    <script>
        var div = document.getElementById('{div_id}');
        div.innerHTML += "<div class='user-msg'>ğŸ‘¤ You: {user_input}</div>";
        div.innerHTML += "<div class='bot-msg'>ğŸ¤– Assistant: {bot_reply.replace(chr(10), '<br>')}</div>";
        div.scrollTop = div.scrollHeight;
    </script>
    """))
    
    input_box.value = ""

# Link input to function
input_box.on_submit(on_enter)

# Display input and heading
display(HTML("<h3>ğŸ“ Karnavati University Assistant</h3>"))
display(input_box)


   
